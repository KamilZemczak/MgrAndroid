<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:id="@+id/loginActivity_logo"
        android:layout_width="550px"
        android:layout_height="350px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40px"
        android:src="@drawable/logo2" />

    <TextView
        android:id="@+id/loginActivity_etText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/loginActivity_logo"
        android:text="Witaj w serwisie społecznościowym poświęconym biegaczom."
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/loginActivity_etText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/loginActivity_etText1"
        android:gravity="center_horizontal"
        android:text="Dostęp do strony dopiero po zalogowaniu." />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/loginActivity_tvRegisterInfo"
        android:layout_below="@+id/loginActivity_etText2"
        android:layout_marginTop="20px"
        android:src="@drawable/refactor" />

    <EditText
        android:id="@+id/loginActivity_etName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/loginActivity_etText2"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Nazwa użytkownika"
        android:background="@color/white"

        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/loginActivity_etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/loginActivity_etName"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Hasło"
        android:background="@color/white"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/loginActivity_bLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#8091ee"
        android:onClick="login"
        android:text="Zaloguj się" />

    <TextView
        android:id="@+id/loginActivity_tvRegisterInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:onClick="openRegister"
        android:text="Jeśli nie masz konta: ZAREJESTRUJ SIĘ" />

</RelativeLayout>
